# Cache Control Headers for Static Assets
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

# Special rules for HTML files
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  Content-Type: text/html; charset=UTF-8

# JavaScript modules - Production build output
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=UTF-8

/assets/*.mjs
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=UTF-8

# CSS files - Production build output
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=UTF-8

# All CSS files - comprehensive coverage
/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=UTF-8

# CSS files from any path (fallback rule)
/src/*.css
  Content-Type: text/css; charset=UTF-8
  Cache-Control: public, max-age=0, must-revalidate

/src/**/*.css
  Content-Type: text/css; charset=UTF-8
  Cache-Control: public, max-age=0, must-revalidate

# Images
/*.jpg
  Cache-Control: public, max-age=2592000
  Content-Type: image/jpeg

/*.jpeg
  Cache-Control: public, max-age=2592000
  Content-Type: image/jpeg

/*.png
  Cache-Control: public, max-age=2592000
  Content-Type: image/png

/*.webp
  Cache-Control: public, max-age=2592000
  Content-Type: image/webp

/*.svg
  Cache-Control: public, max-age=2592000
  Content-Type: image/svg+xml

# Fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2

/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff

# API responses (if served from same domain)
/api/*
  Cache-Control: public, max-age=300, s-maxage=300